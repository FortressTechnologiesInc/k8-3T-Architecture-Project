# Stage 1: Build
FROM maven:3.8.1-openjdk-11-slim AS build

WORKDIR /app

COPY pom.xml .
RUN mvn dependency:go-offline

COPY src ./src/
RUN mvn package

# Stage 2: Runtime
FROM openjdk:11-jre-slim

WORKDIR /app

COPY --from=build /app/target/my-java-app.jar .

EXPOSE 8080

CMD ["java", "-jar", "my-java-app.jar"]
